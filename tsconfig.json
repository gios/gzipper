{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2018"],
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "inlineSourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true
  },
  "include": ["**/*.ts"],
  "exclude": ["test", "dist"]
}
