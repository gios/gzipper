{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "lib": ["es2023"],
    "moduleResolution": "bundler",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "inlineSourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true
  },
  "include": ["**/*.ts"],
  "exclude": ["test", "dist"]
}
